<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zing</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/style.css">
    <script src="/socket.io/socket.io.js"></script>
    <script> const socket = io(); </script>
</head>

<body>
    <nav>
        <h1>CB chat</h1> <span id="headUname"></span>
    </nav>

    <div class="container">
        <div class="p1 partition shadow">
            <div class="userDetails">
                <h3>Welcome to CB chat</h3>
                <p>Instantly join the conversation. No account required.</p>
                <div class="uname"><input type="text" placeholder="enter username" class="usernameInp shadow" >
                    <button class="btn1 shadow">Enter chat</button>
                </div>

            </div>
            <div class="chattingApp">
                <div class="chatScreen">
                    <div class="msgBody shadow"><span>@admin</span>
                        <p>Welcome to CB chat. Happy chatting.</p>
                    </div>
                </div>
                <div class="uchat"><input type="text" placeholder="write a message..." class="chatBox">
                    <button class="btn2">Send</button>
                </div>

            </div>

        </div>
        <div class="p2 partition shadow">
            <h3>Active Users</h3>
            <div class="activeUsers">
            </div>
        </div>
    </div>

    <footer></footer>
    <script src="/chat.js"></script>
</body>

</html>